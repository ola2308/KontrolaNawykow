@page
@model KontrolaNawykow.Pages.Dietician.WaitingClientsModel
@{
    ViewData["Title"] = "Klienci oczekujący na akceptacje";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Klienci oczekujący na akceptacje - KontrolaNawyków</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dietician-style.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Purple+Purse&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Charmonman:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">       
</head>
<body>
    <div class="navigation-header">
        <div class="nav-tabs">
            <a href="/Dietician/Index" class="nav-tab">Twój profil</a>
            <a href="/Dietician/Clients" class="nav-tab">Twoi klienci</a>
            <a href="/Dietician/WaitingClients" class="nav-tab active">Osoby oczekujące</a>
        </div>
        <div class="nav-actions">
            <form method="post" action="/Account/Logout" style="display: inline;">
                <button type="submit" class="logout-btn">🚪 Wyloguj</button>
            </form>
        </div>
    </div>
    <div class="content-container">
        @if (Model.Clients.Count == 0)
        {
            <p>Na razie nie masz żadnych klientów</p>
        }
        else
        {
            <h3>Lista klientów oczekujących na akceptacje i ich dane:</h3>
            foreach (var client in Model.Clients)
            {
                <div class="dietician-prof">
                    Nazwa użytkownika: @(client.Username)
                    <br />
                    Adres Email: @(client.Email)
                    <br />
                    Płeć: @(client.Plec)
                    <br />
                    Wiek: @(client.Wiek)
                    <br />
                    Waga: @(client.Waga)
                    <br />
                    Wzrost: @(client.Wzrost)
                    <br />
                    Aktywność fizyczna: @(client.AktywnoscFizyczna)
                    <br />
                    Rodzaj pracy: @(client.RodzajPracy)
                    <br />
                    Cel: @(client.Cel)
                    <br />
                    BMI: @(client.CustomBmi)
                    <br />
                    Deficyt kaloryczny: @(client.CustomCaloriesDeficit)
                    <br />
                    Liczba gram spożywanego białka dziennie: @(client.CustomProteinGrams)
                    <br />
                    Liczba gram spożywanych węglowodanów dziennie: @(client.CustomCarbsGrams)
                    <br />
                    Liczba gram spożywanych tłuszczów dziennie: @(client.CustomFatGrams)
                    <br />

                    <form method="GET">
                        <input type="hidden" name="AcceptClient" value="@(client.Id)" />
                        <button type="submit" class="action-btn">Zaakceptuj prośbę</button>
                    </form>

                </div>
            }
        }

    </div>
</body>
</html>