@page
@model KontrolaNawykow.Pages.DieticianConnection.IndexModel
@{
    ViewData["Title"] = "Twój dietetyk";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Twój dietetyk - KontrolaNawyków</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/diet-style.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Purple+Purse&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Charmonman:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        .settings-icon {
            width: 24px;
            height: 24px;
            margin-left: 8px;
        }

        .content-container {
            padding: 10px;
        }

        .dietician-prof {

        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="header-tabs">
            <div class="tabs-container">
                <a href="/Diet/Index" class="tab-button">Dieta</a>
                <a href="/ToDo/Index" class="tab-button">ToDo</a>
                <a href="/Admin/Dashboard" class="tab-button">Admin</a>
                <a href="/YourDietician/Index" class="tab-button active">Twój dietetyk</a>
                <a href="/Account/Logout" class="tab-button-logout">Wyloguj się</a>
            </div>
            <div class="profile-button">
                <a href="/Profile/Index" class="profile-link">Mój profil <i class="fas fa-user-cog"></i></a>
            </div>
        </div>

        <div class="content-container">
            @if (Model.ConnectedDietician != null)
            {
                <h3>Twój dietetyk</h3>

                <div class="dietician-prof">
			        @(Model.ConnectedDietician.Imie) @(Model.ConnectedDietician.Nazwisko)
			        <br />
			        Specjalizacja: @(Model.ConnectedDietician.Specjalizacja)
                    <br />
                    Email: @(Model.ConnectedDietician.Email)
                    <br />
                    Numer telefonu: @(Model.ConnectedDietician.Telefon)
                    <br />

                    @if (Model.CurrentUser.DieticianAccepted != null && Model.CurrentUser.DieticianAccepted != 0)
                    {
                        <p>Status: <span style="color:green;">Zaakceptowano</span></p>
                    }
                    else
                    {
                        <p>Status: <span style="color:red;">Na razie nie zaakceptowano</span></p>
                    }

                    <form method="GET">
                        <input type="hidden" name="RemoveDietician" value="Zrezygnowałeś z dietetyka" />
                        <button type="submit">Zrezygnuj z dietetyka</button>
                    </form>
                </div>
            }
            else
            {
                <h3>Na razie nie masz dietetyka.</h3>
                <a href="/YourDietician/FindDieticians">Znajdź dietetyka</a>

                @if (Model.RemoveDietician != null)
                {
                    <p>@(Model.RemoveDietician)</p>
                }
            }

        </div>
    </div>
</body>
</html>