<script>
    let ingredients = [];
    let ingredientCounter = 0;

    document.addEventListener('DOMContentLoaded', function() {
        console.log('Recipe Add page loaded');
        
        // Image preview
        const imageInput = document.getElementById('recipeImage');
        if (imageInput) {
            imageInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const preview = document.getElementById('imagePreview');
                        const img = document.getElementById('previewImg');
                        img.src = e.target.result;
                        preview.style.display = 'block';
                        
                        // Update label text
                        const uploadText = document.querySelector('.upload-text');
                        uploadText.textContent = file.name;
                    };
                    reader.readAsDataURL(file);
                }
            });
        }

        // Nutrition preview
        const nutritionInputs = ['calories', 'protein', 'carbs', 'fat'];
        nutritionInputs.forEach(input => {
            const element = document.getElementById(input);
            if (element) {
                element.addEventListener('input', updateNutritionPreview);
            }
        });

        // Form submission
        const form = document.getElementById('recipeForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Prepare ingredients JSON
                const ingredientData = [];
                document.querySelectorAll('.ingredient-row').forEach(row => {
                    const select = row.querySelector('.ingredient-select');
                    const amountInput = row.querySelector('input[type="number"]');
                    
                    if (select && select.value && amountInput && amountInput.value) {
                        ingredientData.push({
                            IngredientId: parseInt(select.value),
                            Amount: parseFloat(amountInput.value)
                        });
                    }
                });

                document.getElementById('recipeIngredientsJson').value = JSON.stringify(ingredientData);
                
                // Submit form
                form.submit();
            });
        }

        // Load ingredients on page load
        loadIngredients();
    });

    function updateNutritionPreview() {
        const calories = parseFloat(document.getElementById('calories').value) || 0;
        const protein = parseFloat(document.getElementById('protein').value) || 0;
        const carbs = parseFloat(document.getElementById('carbs').value) || 0;
        const fat = parseFloat(document.getElementById('fat').value) || 0;

        // Calculate calories from macros
        const proteinCal = protein * 4;
        const carbsCal = carbs * 4;
        const fatCal = fat * 9;
        const totalMacroCal = proteinCal + carbsCal + fatCal;

        // Calculate percentages
        const proteinPercent = totalMacroCal > 0 ? Math.round((proteinCal / totalMacroCal) * 100) : 0;
        const carbsPercent = totalMacroCal > 0 ? Math.round((carbsCal / totalMacroCal) * 100) : 0;
        const fatPercent = totalMacroCal > 0 ? Math.round((fatCal / totalMacroCal) * 100) : 0;

        // Update display
        document.getElementById('proteinCalories').textContent = `${proteinCal} kcal (${proteinPercent}%)`;
        document.getElementById('carbsCalories').textContent = `${carbsCal} kcal (${carbsPercent}%)`;
        document.getElementById('fatCalories').textContent = `${fatCal} kcal (${fatPercent}%)`;
        document.getElementById('totalMacroCalories').textContent = `${totalMacroCal} kcal`;

        // Show warning if macro calories don't match input calories
        const caloriesDiff = Math.abs(calories - totalMacroCal);
        if (caloriesDiff > 10 && calories > 0 && totalMacroCal > 0) {
            document.getElementById('totalMacroCalories').style.color = '#dc3545';
            document.getElementById('totalMacroCalories').title = `Różnica: ${caloriesDiff} kcal od podanych kalorii`;
        } else {
            document.getElementById('totalMacroCalories').style.color = '#333';
            document.getElementById('totalMacroCalories').title = '';
        }
    }

    function removeImage() {
        document.getElementById('recipeImage').value = '';
        document.getElementById('imagePreview').style.display = 'none';
        document.querySelector('.upload-text').textContent = 'Wybierz zdjęcie';
    }

    async function loadIngredients() {
        try {
            const response = await fetch('/api/ingredient');
            if (response.ok) {
                ingredients = await response.json();
                console.log('Loaded ingredients:', ingredients);
            } else {
                console.error('Failed to load ingredients');
                showAlert('Błąd podczas ładowania składników', 'danger');
            }
        } catch (error) {
            console.error('Error loading ingredients:', error);
            showAlert('Błąd połączenia z serwerem', 'danger');
        }
    }

    function addIngredientRow() {
        if (ingredients.length === 0) {
            showAlert('Najpierw załaduj składniki', 'danger');
            return;
        }

        const container = document.getElementById('ingredientsContainer');
        const row = document.createElement('div');
        row.className = 'ingredient-row';
        row.id = `ingredient-${ingredientCounter}`;

        row.innerHTML = `
            <select class="ingredient-select" required>
                <option value="">Wybierz składnik</option>
                ${ingredients.map(ing => `<option value="${ing.id}">${ing.name}</option>`).join('')}
            </select>
            <input type="number" placeholder="Ilość (g)" min="0" step="0.1" class="form-control" required>
            <button type="button" class="remove-ingredient-btn" onclick="removeIngredientRow(${ingredientCounter})">🗑️</button>
        `;

        container.appendChild(row);
        ingredientCounter++;
    }

    function removeIngredientRow(id) {
        const row = document.getElementById(`ingredient-${id}`);
        if (row) {
            row.remove();
        }
    }

    function showAlert(message, type) {
        // Remove existing alerts
        document.querySelectorAll('.alert').forEach(alert => alert.remove());

        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type}`;
        alertDiv.textContent = message;

        const container = document.querySelector('.add-recipe-container');
        const header = container.querySelector('.page-header');
        container.insertBefore(alertDiv, header.nextSibling);

        // Auto remove after 5 seconds
        setTimeout(() => {
            alertDiv.remove();
        }, 5000);
    }
</script>